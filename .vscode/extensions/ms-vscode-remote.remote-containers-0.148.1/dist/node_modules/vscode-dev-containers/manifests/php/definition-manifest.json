{
	"variants": ["7", "7.4", "7.3"],
	"build": {
		"latest": "true",
		"rootDistro": "debian",
		"tags": [
			"php:${VERSION}-${VARIANT}"
		]
	},
	"dependencies": {
		"image": "php:${VARIANT}",
		"imageLink": "https://hub.docker.com/_/php",
		"debian": [
			"apt-utils",
			"git",
			"openssh-client",
			"gnupg2",
			"iproute2",
			"procps",
			"lsof",
			"htop",
			"net-tools",
			"psmisc",
			"curl",
			"wget",
			"rsync",
			"ca-certificates",
			"unzip",
			"zip",
			"tar",
			"nano",
			"vim-tiny",
			"less",
			"jq",
			"lsb-release",
			"apt-transport-https",
			"dialog",
			"libc6",
			"libgcc1",
			"libgssapi-krb5-2",
			"libicu[0-9][0-9]",
			"liblttng-ust0",
			"libstdc++6",
			"zlib1g",
			"locales",
			"sudo",
			"ncdu",
			"man-db",
			"zsh",
			"yarn"
		],
		"git": {
			"Oh My Zsh!": "/root/.oh-my-zsh",
			"nvm": "/usr/local/share/nvm"
		},
		"other": {
			"Xdebug": {
				"versionCommand": "php --version | grep -oE 'Xdebug\\sv[^,]+' | sed -n '/Xdebug\\sv/s///p'",
				"downloadUrl":"https://xdebug.org/"
			},
			"Composer": {
				"versionCommand": "composer --version | grep -oE 'version\\s[^ ]+' | sed -n '/version\\s/s///p'",
				"downloadUrl": "https://getcomposer.org/installer"
			}
		}
	}
}
