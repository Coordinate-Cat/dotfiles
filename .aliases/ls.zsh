### list segments
alias ls='clear && lsd'

### one line list
alias ls1='clear && lsd -1'

### all list & dir
alias lsa='clear && lsd -a'

### file size unit
alias lsh='clear && lsd -h'

### list details
alias lsl='clear && lsd -l'

### reverse list
alias lsr='clear && lsd -r'

### filename & extension & .
alias lsaa='clear && lsd -A'

### filename & extension
alias lsf='clear && lsd -F'

### recursion dir
alias lsr='clear && lsd -R'

### file by size
alias lss='clear && lsd -lS'

### update time list
alias lst='clear && lsd -lt'
