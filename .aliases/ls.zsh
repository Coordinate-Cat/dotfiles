#!/usr/bin/zsh

### list segments
alias ls='clear && ls'
### one line list
alias ls1='clear && ls -1'
### all list & dir
alias lsa='clear && ls -a'
### file size unit
alias lsh='clear && ls -h'
### list details
alias lsl='clear && ls -l'
### reverse list
alias lsr='clear && ls -r'
### filename & extension & .
alias lsaa='clear && ls -A'
### filename & extension
alias lsf='clear && ls -F'
### recursion dir
alias lsr='clear && ls -R'
### file by size
alias lss='clear && ls -lS'
### update time list
alias lst='clear && ls -lt'
